@model UrbanAreasProject.Models.DataCity
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create City</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/style/edit_create.css">
</head>
<body>

    <div class="bg_container">
        <div id="container_reg">
            <h1>Create</h1>
            <form asp-action="create" asp-controller="rating">
                <div class="form-group">
                    <label name="Name" class="control-label">Name</label>
                    <input type="text" name="Name" class="form-control" required />               
                </div>
                <div class="form-group">
                    <label name="Id" class="control-label">Id</label>
                    <input type="number" name="Id" class="form-control" required />
                </div>
                <div class="form-group">
                    <label name="Country" class="control-label">Country</label>
                    <input type="text" name="Country" class="form-control" required />
                </div>
                <div class="form-group">
                    <label name="Region" class="control-label">Region</label>
                    <input type="text" name="Region" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label name="Population" class="control-label">Population</label>
                    <input type="number" name="Population" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label name="Latitude" class="control-label">Latitude (format: xx.xxxxxx / -xx.xxxxxx)</label>
                    <input type="text" name="Latitude" class="form-control"  required pattern="[-]{0-1}[0-9]{2}.[0-9]{6"/>
                </div>
                <div class="form-group">
                    <label name="Longitude" class="control-label">Longitude Latitude (format: xxx.xxxxxx / -xx.xxxxxx)</label>
                    <input type="text" name="Longitude" class="form-control" required pattern="[-]{0-1}[0-9]{2-3}.[0-9]{6}" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
