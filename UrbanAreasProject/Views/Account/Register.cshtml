@model UrbanAreasProject.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Form</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/style/register.css">
</head>
<body>
    <div class="bg_container">
        <div id="container_reg">
            <h1>Sign up</h1>
            <form method="post" asp-controller="Account" asp-action="Register" id="reg">
                <div class="valid" asp-validation-summary="ModelOnly"></div>
                <div>
                    <input asp-for="UserName" placeholder="User Name">
                    <span class="valid" asp-validation-for="UserName"></span>
                </div>
                <div>
                    <input asp-for="Email" placeholder="E-mail">
                    <span class="valid" asp-validation-for="Email"></span>
                </div>
                <div>
                    <input asp-for="Password" placeholder="Password">
                    <span class="valid" asp-validation-for="Password"></span>
                </div>
                <div>
                    <input asp-for="PasswordConfirm" placeholder="PasswordConfirm">
                    <span class="valid" asp-validation-for="PasswordConfirm"></span>
                </div>
                <input type="submit" value="Sign up" />
            </form>
        </div>
    </div>
</body>
</html>